# Smart API Sandbox Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DB_PATH=./data/sandbox.db

# OpenAI Configuration (optional - app will work without this)
# If not provided, AI features will gracefully fall back to advanced mode
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Mockoon Configuration
MOCKOON_DATA_DIR=./server/mockoon-data
MOCKOON_BASE_PORT=3001

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=5001
