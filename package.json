{
  "name": "sandboxy",
  "version": "1.0.0",
  "description": "Sandboxy - The easiest way to sandbox your APIs â€” with smart mocks that persists, fake data that feels real, and optional AI-powered generators",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:dev\"",
    "build": "npm run clean && tsc && tsc -p tsconfig.frontend.json && npm run copy-assets",
    "build:watch": "tsc --watch",
    "start:dev": "nodemon dist/server/index.js",
    "copy-assets": "cp public/index.html dist/public/ 2>/dev/null || true",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "echo \"Linting not configured yet\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "api",
    "mocking",
    "sandbox",
    "openapi",
    "ai"
  ],
  "author": "Sandboxy Team",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "ajv": "^8.17.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0",
    "json-schema-faker": "^0.5.9",
    "lowdb": "^5.1.0",
    "morgan": "^1.10.1",
    "openai": "^5.19.1",
    "openapi-backend": "^5.15.0",
    "swagger-parser": "^10.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
